{% load static %}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Jeux Olympiques − France 2024</title>
    <link rel="stylesheet" href="{{ url_for('static', filename='css/styles.css') }}">
    <script src="{{ url_for('static', filename='js/scripts.js') }}" defer></script>
</head>
<body>
<header class="header">
    <div class="container">
            <div class="header-slider">
                <img src="{% static 'img/back1.webp' %}" alt="Affiche 1" class="header-slide">
                <img src="{% static 'img/back2.webp' %}" alt="Affiche 2" class="header-slide">
            </div>
        <h1 class="site-title">Jeux Olympiques − France 2024</h1>
        <img src="{% static 'img/MassScott.webp' %}" alt="Image 2" class="header-image">
        <nav class="main-nav" aria-label="Navigation principale">
            <h4><a href="{{ url('accueil') }}" class="card slideIn">Accueil</a></h4>
            {% if user.is_authenticated() %}
                <a class="main-nav card simple_titre" >Bienvenue, {{ user.username }}</a>
                <h4><a href="{% url('logout') }}" class="card slideIn">Déconnexion</a></h4>
                <h4><a href="{% url('voir_panier') }}" class="panier-link card slideIn">
                    {% if panier_total > 0 %}
                        {{ panier_total }} article(s) au panier
                    {% else %}
                        Le panier est vide
                    {% endif %}
                </a></h4>
            {% else %}
                <h4><a href="{{ url('login') }}" class="card slideIn">Connexion</a></h4>
                <h4><a href="{{ url('signup') }}" class="card slideIn">Inscription</a></h4>
                <h4><a href="{{ url('voir_panier') }}" class="panier-link card slideIn">Panier</a></h4>
            {% endif %}
        </nav>
        {% if user.is_authenticated and request.path != "/client/" %}
        <p>Accédez à votre <a href="{% url 'client_page' %}">Compte Client</a></p>
        {% else %}
        <p></p>
        {% endif %}
    </div>
</header>
<main class="content container">
    {% block content %}
    {% endblock%}
</main>
<footer class="footer">
    <div class="container">
        <div class="epreuves-container">
            {% if request.path not in "/mentions_legales/" %}
            <p class="card"><a href="{% url 'mentions_legales' %}">Mentions Légales</a></p>
            {% endif %}
            <p class="card">JO2024 pour STUDI</p>
            <p class="card"><a href="mailto:EtudiantSTUDI@gmx.fr">Contact</a></p>
        </div>
    </div>
</footer>
</body>
</html>